@model FreelancePool.Web.ViewModels.Administration.Users.RegisterAdminInputModel
@{
    this.ViewData["Title"] = "Register Administrator";
}

<div class="container">
    <form asp-action="RegisterAdmin" method="post">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" placeholder="example@example.com, example@example.com" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Submit email of user to remove</label>
            <input asp-for="Email" class="form-control" placeholder="example@example.com, example@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Submit email of user to remove</label>
            <input asp-for="Password" class="form-control" placeholder="example@example.com, example@example.com" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Submit email of user to remove</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="example@example.com, example@example.com" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>
