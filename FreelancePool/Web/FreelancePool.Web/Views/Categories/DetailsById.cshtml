@model CategoryDetailsViewModel
@using FreelancePool.Web.ViewModels.Categories
@using FreelancePool.Common

@{
    this.ViewData["Title"] = "Freelancers and projects in category";
}

<div class="freelancers">
    <div class="container">
        <div class="row">
            <div class="col-md-7 text-center">
                <h4 class="text-center">Freelancers</h4>
                <i class="fa fa-2x fa-angle-down"></i>
                <div class="card-allfreelancers example-1 text-profile-about square scrollbar-cyan bordered-cyan">
                    @foreach (var freelancer in Model.Freelancers)
                    {
                        @Html.DisplayFor(f => freelancer)
                    }
                </div>
                <br />
                <br />
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <div>
                        <h5 class="bg bg-primary">You can arrange the freelancers by:</h5>
                    </div>
                    <br />
                    <form asp-area="" asp-controller="Categories" asp-action="DetailsById" asp-route-id="@Model.Id">
                        <div class="form-group radio text-center">
                            <label><input type="radio" asp-for="Order" value="@GlobalConstants.AlphabeticalOrder">Name</label>
                            <label><input type="radio" asp-for="Order" value="@GlobalConstants.RatingOrder">Rating</label>
                        </div>
                        <input type="submit" class="btn btn-primary pull-right" />
                    </form>
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <div class="col-md-5 text-left">
                <div class="text-center">
                    <h4 class="text-center">Projects:</h4>
                    <i class="fa fa-2x fa-angle-down"></i>
                </div>
                <div class="card text-left example-1 square scrollbar-cyan bordered-cyan">
                    @foreach (var project in Model.Projects)
                    {
                        @Html.DisplayFor(p => project)
                    }
                </div>
            </div>
        </div>
    </div>
</div>
